@media (max-width: 960px)
  .l-header__h
    margin-top: 80px
    font-size: 65px
  .user-cabinet
    float none
  .logo
    float none
    margin-bottom 15px
  .l-header_bg-style
    padding-bottom 20px
  .l-sort__items
    border-radius 28px
  #everywhere
    width 49%
    float right
  #everything
    width 49%
    .l-sort__header
      display block
  .l-sort__everything
    display none
  #allTime
    width 100%
  .l-sort__items.active .l-sort__list
    max-height 220px
  .event-list_normal .event-list__item
    width 50%
  .l-events
    padding-bottom 80px
  .latest-concert
    overflow-x scroll
    display block
    white-space nowrap
    &__item
      display inline-block
      width auto
      max-width 220px
      white-space normal

@media (max-width: 800px)
  .l-header__h
    margin-top: 80px
    font-size: 50px
  .user-cabinet
    float none
    min-width 190px
    &__head
      padding: 4px 5px;
      font-size 15px
    &__link
      font-size: 12px;
      padding: 6px 13px;
      &:before
        margin-right 20px
  .navigation__link
    padding: 12px 18px;
    font-size 12px
@media (max-width: 700px)
  .l-header__h
    font-size 30px
  .l-header__text
    font-size 18px
  .user-cabinet
    float: right
  .navigation
    &__items
      display none
    &__item
      display: block
    &__burger
      display: inline-block
      float left
      margin-top: 10px;
  .button_big
    padding: 15px 26px;
    font-size: 15px;
  .icon_show-t:before
    width: 22px;
    height: 20px;
    background-size contain
  .event-list_normal
    text-align center
  .event-list_normal .event-list__item
    width 100%
    max-width 385px
    text-align left
  .contacts
    margin-top 0
  .l-sort__header
    display: block
  .l-sort__allTime
    display: none
  #everything,
  #everywhere,
  #allTime
    width 100%
    margin-bottom 15px
@media (max-width: 400px)
  .l-header__h
    margin-top: 80px
    font-size: 25px
  .l-event-dated__h
    font-size 25px
  .navigation
    float none
  .l-footer
    text-align center
  .contacts
    width 100%
  .copyright
    display: inline-block



