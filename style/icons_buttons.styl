.button
  background: $blue
  border-radius 32px
  cursor pointer
  display: inline-block
  color #fff
  &_list-item
    padding: 14px 43px;
    text-transform capitalize
    border: 1px solid #fff;
    display: inline-block;
    background: none
    box-sizing: border-box;
    color: #fff;
    &:after
      content ""
      background url(../img/list_arrow.png) bottom center no-repeat
      width 13px
      height 6px
      display block
      position absolute
      right: 15px
      top: 25px
  &_big
    padding 18px 38px
    font-size 18px
    text-transform uppercase
    &:hover
      background: $blue-hover
  &_small
    padding 18px 40px
    font-size 16px
    font-weight 500
  &__icon
    display block
    margin 0
    &:before
      content ""
      display inline-block

#scrollTop
  width 52px
  height: 52px
  background url(../img/arrow-top.png) center center no-repeat #fff
  position fixed
  right 5%
  bottom 20%
  cursor pointer
  display: none
  border-radius 50%
  box-shadow 0 0 43px #2089f4
  opacity 0.8
  z-index 99999999
  outline none
  &:hover
    opacity 1

