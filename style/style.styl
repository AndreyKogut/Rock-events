.l-sort
 &__items
   background: rgba(0,0,0,0.6)
   display inline-block
   position relative
   z-index 10
   border-radius 32px
   text-align justify
   padding 5px
   box-sizing border-box
   &_big
      width 100%
      margin-bottom 20px
      z-index 5
   &_medium
     width: 78%
     z-index 3
   &_small
     width 20%
     z-index 4
   &.active
     border-bottom-right-radius 0
     border-bottom-left-radius 0
     .l-sort__header
      color #fff
      display block
     .l-sort__item
      display block
     .l-sort__list
      display block
      position absolute
      left 0
      border-top 1px solid #333149
      padding 10px 0
      border-bottom-right-radius 32px
      border-bottom-left-radius 32px
      background #101320
      max-height 150px
      &:after
       display none
     .l-sort__item
       margin 0
       width 100%
       background transparent
       &:not(:last-child)
         border-bottom  1px solid  rgba(0,0,0,0.2)
     .l-sort__label
       padding 10px 33px
       background transparent
       box-sizing border-box
       padding-right 5px
       width 100%
       &:hover
        color #fff
        text-decoration none
     .l-sort__header:after
      transform rotate(180deg)
      background-position: bottom center
     .l-sort__but:checked + .l-sort__label
       background transparent
       color #fff
  &__list
    width 100%
    margin-bottom -18px;
    &:after
      width: 100%;
      height: 0;
      visibility: hidden;
      overflow: hidden;
      content: "";
      display: inline-block;
