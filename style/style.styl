    position relative
  .close-but
    position absolute
    top 0
    left 0
    width 100%
    background: $form-close-color;
    text-align right
    padding-right 10px
    box-sizing border-box
  .delete-icon
    opacity 0.2
    &:hover
      opacity 1
  .about-body__link
    padding 16px 0
  .about-body__list
    background: $form-header-color
  .profile-form__label
    text-align left
  .sign-tabs__label
    color $medium-purple
    font-size 14px
    text-transform uppercase
    margin-top 10px
  .user-links
    margin-bottom 20px
.but-wrapper
  width 68%
  .button
    display: inline-block
    margin-bottom 25px
