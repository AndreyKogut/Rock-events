/* tabs */
.tabs-list
  width 100%
  &__header
    background: rgba(0,0,0,.3)
  &__row
    text-indent 15px
  &__td
    font-size 14px
    color $medium-purple
    line-height 2.5
    &_dark
      color $medium-purple-disabled
  &__link
    color $medium-purple
    word-break: break-word;
    &:hover
      color #fff
  &__body
    .tabs-list__row:nth-child(2n)
      background: rgba(0,0,0,.02)
    .tabs-list__row:nth-child(2n+1)
      background: rgba(255,255,255,.02)
.gallery-group
  font-size 0
  display: block
  margin 0 -15px
  &__item
    width 50%
    box-sizing border-box
    padding 15px
    display: inline-block
    position: relative
  &__link
    display: block
    &:before
      content ''
      position: absolute
      top: 15px
      right: 15px
      left: 15px
      bottom: 15px
      display: block
      z-index 1
      border-radius 5px
      background: $gallery-group-before
      opacity $gallery-group-before-opasity
    &:hover:before
      opacity $gallery-group-before-hover-opasity
  &__img
    width 100%
    border-radius 5px
  &__description
    bottom: 60px
    left: 35px
    right: 35px
    display: block
    position absolute
    z-index 1
  &__group-name
    color #fff
    font-size 22px
    text-transform uppercase
.hash-list
  display: block
  position absolute
  bottom 30px
  left 35px
  right: 35px;
  z-index 13
  &__item
    display: inline-block
  &__link
    display: block
    margin-right 4px
    font-size 14px
    color $medium-purple
    &:before
      content '#'
    &:hover
      color #FFFFFF
      &:before
        color #fff

.l-filters
  &__select
    &_country
     min-width 130px
    &_city
     min-width 165px
    &_fans
     min-width 90px
    &_genre
     min-width 140px
    &_date
     min-width 140px
  &__item
    display: inline-block
    &:not(:last-child)
      margin-right 30px
  &__option
    background: #313039
  &__label
    color $medium-purple
    font-size 14px
    margin-right 10px
.filtered-element
   padding 30px 0
   &:nth-child(2n+1)
    background: rgba(255,255,255,.03)
.user-cabinet
  display: inline-block
  cursor pointer
  z-index 20
  text-align left
  min-width 220px
  position relative
  &__img
    vertical-align middle
    border-radius 50%
    width 36px
    margin-right 10px
  &__head
    color #fff
    display: block
    font-size 16px
    position relative
    width 100%
    box-sizing border-box
    padding 7px 9px
    background: $blue
    padding-right 35px
    border-radius 21px
    &.active
      border-bottom-left-radius 0
      border-bottom-right-radius 0
    &:hover
      background-color: $blue-hover
    &:after
      position absolute
      top 50%
      right 18px
      content ''
      background: url(../img/list_arrow.png) bottom center
      display: inline-block
      width 9px
      height 6px
      margin-top -3px
  &__menu
    display: none
    position absolute
    padding-bottom 5px
    background: $blue
    border-bottom-left-radius 21px
    border-bottom-right-radius 21px
    width 100%
  &__item
    border-top: 1px solid #1e7fe2
  &__link
    color $white-hover
    display block
    width 100%
    box-sizing border-box
    font-size 14px
    padding 8px 17px
    &:hover
      color #FFFFFF
      &:before
        background-image url(../img/profile-sprite-hover.png)

  /* custom select */
.selectize-control .selectize-input > input
  display none !important
.selectize-control.single .selectize-input:after
  border-color $medium-purple transparent transparent transparent
.selectize-input.items.full.has-options.has-items.focus.dropdown-active.input-active
  border-bottom-left-radius 0
  border-bottom-right-radius 0
  color #fff
.selectize-input.items.full.has-options.has-items.focus
  cursor pointer
.selectize-control.single .selectize-input.dropdown-active:after
  border-color  transparent transparent #fff transparent
.selectize-control
  position: relative;
  display: inline-block
  vertical-align: middle;
.selectize-input.items.full.has-options.has-items
  border-radius 17px
  color $medium-purple
  padding 10px 30px 10px 20px
  line-height 1
  font-size 14px
  background rgba(255,255,255,.1)
  border none
.selectize-dropdown [data-selectable],
.selectize-dropdown .optgroup-header,
.selectize-dropdown .active
  padding: 3px 8px;
  padding-left: 19px;
  font-size: 14px;
  line-height 1.5
  color $medium-purple
  border-top:1px solid rgba(255,255,255,.03)
.selectize-dropdown .active,
.selectize-dropdown .selected
  background: transparent
  color #fff


.selectize-dropdown
  background: #3e2933;
  border-color transparent
  border-bottom-right-radius  17px
  border-bottom-left-radius  17px
  width: 100% !important

.like-wrapper
  position absolute
  bottom 25px
  z-index 5
  left 15px
  right 15px
  text-align center
  .group-statistic__link_border
    display: inline-block
    margin-top 50px
    cursor pointer
.con-list-wrapper
  width 65%
#tabs-block-admin
  background: rgba(0,0,0,.2)
  display table
  width 100%
.l-admin
  &__list
    display table-cell
    font-size 15px
    vertical-align: top;
    width 170px
  &__item
    display: block
    width 100%
    height 101px
  &__icon
    width 35px
  &__icon,
  &__head
    display table-cell
    vertical-align middle
  &__link
     display: table
     width 100%
     padding: 0 22px;
     height 100%
     overflow hidden
     vertical-align middle
     box-sizing border-box
     background: #1a1822
     font-size 19px
     color #fff
     &:hover
       background: #322e42
     &_log-out
       background #111018
#tabs-block-admin .r-tabs-accordion-title .r-tabs-anchor
  display: table
  width 100%
  padding: 0 22px;
  height 100%
  overflow hidden
  vertical-align middle
  box-sizing border-box
  background: #1a1822
  font-size 19px
  color #fff
  &:hover
    background: #322e42
  &_log-out
    background #111018
#tabs-block-admin .r-tabs-accordion-title .r-tabs-anchor
  padding-top 20px
  padding-bottom 20px
#tab-1,
#tab-2,
#tab-3,
#tab-4,
#tab-5,
#tab-6
  width 100%
  max-height 606px
  font-size 15px
  box-sizing border-box;
  vertical-align top
  display none
  padding 25px
  .r-tabs-panel.r-tabs-state-active
    display table-cell
  .mCSB_scrollTools .mCSB_draggerContainer
    height  100%
  .mCSB_outside + .mCSB_scrollTools
    right 10px
    top 25px
    bottom 25px
.img-wrapper
  display: inline-block
  border-radius 50%
  overflow hidden
  position relative


// Tabel active
#tabs-block-admin li.l-admin__item.r-tabs-tab.r-tabs-state-active .l-admin__link
  background $blue
  text-decoration none

#tabs-block-admin .r-tabs-accordion-title.r-tabs-state-active
  display none
#tabs-block-admin .r-tabs-accordion-title
  display: none
// end

.l-profile
  &__img
    width 135px
    display: block
  &__foto
    position absolute
    width 100%
    height 100%
    top 0
    left: 0
    margin-top: 75%;
    background-color: rgba(0,0,0,.8)
.user-links
  display: block
  margin-top 10px
  margin-bottom 40px
  &__link
    width 35px
    height 32px
    display: inline-block
    opacity 0.2
    &:not(:last-child)
      margin-right 20px
    &:hover
      opacity 1


.profile-form
  &__list
    font-size 0
    margin 0 -10px
    text-align left
    margin-bottom 30px
  &__item
    display inline-block
    width 33.33%
    vertical-align middle
    padding 0 15px
    box-sizing border-box
  &__label
    font-size 12px
    color $medium-purple
    text-transform uppercase
    margin-bottom 10px
    display block
    margin-left 15px
  &__input,
  &__button,
  &__submit
    appearance none
    background none
    border none
    box-shadow none
    outline none
  &__input
    margin-bottom 30px
    display block
    width 100%
    background rgba(0,0,0,.25)
    border-radius 22px
    line-height 44px
    padding-left 25px
    padding-right 15px
    box-sizing border-box
    color $medium-purple
    font-size 16px
    text-overflow: ellipsis;
    &:focus
      box-shadow: 0px 0px 10px 1px rgba(54, 173, 234, 0.36)
      color #fff
  &__submit
    font-size 18px
    color #fff
    cursor pointer
    padding 18px 40px
    line-height 1
    background: $blue
    border-radius 32px
    text-transform  uppercase
    margin-bottom 20px
    &:hover
      background: $blue-hover
  &__link
    font-size 14px
    color $mega-dark-purple
    font-weight 700
    opacity .8
    &:hover
      opacity 1

::-webkit-input-placeholder {font-family: 'Roboto' ;font-style:  italic; color: #413946}
::-moz-placeholder          {font-style: italic; color: #413946}
:-moz-placeholder           {font-style: italic; color: #413946}
:-ms-input-placeholder      {font-style: italic; color: #413946}


