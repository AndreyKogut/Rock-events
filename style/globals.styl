.cf:after,
.cf:before
  content: '';
  display: table;

.cf:after
  clear: both;
ul
  list-style none
  margin 0
  padding 0
a
  text-decoration none
.f-l
  float left
.f-r
  float right

body
  font 500 16px 'Roboto'

.content
  width 100%
  max-width: 1200px
  padding 0 15px
  margin: auto
  z-index 1
  box-sizing border-box
  position relative
  overflow hidden

 .l-header
   text-align center
   &_bg-style
     background: url(../img/bg-image.jpg) top center no-repeat
     padding-top 15px
     padding-bottom 40px
     background-size: cover;
   &_grad-bg
     padding-top: 17px
     padding-bottom: 17px
     background: rgba(0,0,0,0.6)
.l-sort
   padding-top 30px
   padding-bottom 30px
   z-index 2

 .l-events
   padding-top 45px
   padding-bottom 125px
   text-align: center

 .l-event-dated
   padding 0
   padding-top 65px
   padding-bottom 80px

 .l-footer
   padding-top: 24px
   padding-bottom: 24px
   background: $dark-grey

 .l-breadcrumbs
   padding-top: 20px
   padding-bottom 20px
   background rgba(0,0,0,0.2)
 .l-concert
   padding-top: 35px
   padding-bottom 125px
   font-size 0