.cf:after,
.cf:before
  content: '';
  display: table;

.cf:after
  clear: both;
ul
  list-style none
  margin 0
  padding 0
a
  text-decoration none
.f-l
  float left
.f-r
  float right
.al-left
  text-align left
  display inline-block
.al-center
  text-align center
  display inline-block
  white-space: pre;
body
  font 500 16px 'Roboto'
.gradient-bg
  position relative
  &:before
    content ""
    position absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    background linear-gradient(21deg, $grad-color-1 ,$grad-color-2 , $grad-color-3);
    opacity $grad-opacity
    display: block
  &_light
    background: $grad-bg-light
  &_medium
    background $grad-bg
  &_dark
    background: $grad-bg-dark

.content
  width 100%
  max-width: 1200px
  padding 0 15px
  margin: auto
  box-sizing border-box
  position relative

 .l-header
   text-align center
   position static
   z-index 10
   &_bg-style
     background: url(../img/bg-image.jpg) top center no-repeat
     padding-top 17px
     padding-bottom 40px
     background-size: cover;
   &_grad-bg
     padding-top: 17px
     padding-bottom: 17px
     background: rgba(0,0,0,0.6)
.l-sort
   padding-top 30px
   padding-bottom 30px
   z-index 5

 .l-events
   padding-top 45px
   padding-bottom 125px
   text-align: center

 .l-event-dated
   padding 0
   padding-top 65px
   padding-bottom 80px

 .l-footer
   padding-top: 24px
   padding-bottom: 24px
   background: $dark-grey

 .l-breadcrumbs
   padding-top: 20px
   padding-bottom 20px
   background rgba(0,0,0,0.2)

 .l-concert
   padding-top: 35px
   padding-bottom 125px
   font-size 0

 .l-about
   padding-top 70px

 .l-filters
   padding-top 37px
   padding-bottom 37px
   background: rgba(0,0,0,.3)
   position: static
   z-index 5

 .l-admin
    margin 90px 0
    background: rgba(0,0,0,.2)

// fancybox + iframe flex
#video1
  position: relative;
  padding-bottom: 56.25%;
  height: 0;
  width 100%
  display: none

.iframe
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block

.fancybox-wrap.fancybox-desktop.fancybox-type-inline.fancybox-opened
  width 65% !important
.fancybox-skin
  padding 2px !important
.fancybox-inner
  width 100% !important
.fancybox-nav
  position: absolute;
  width: 36px;
  height: 32px;
  top: 50%

.fancybox-nav span
  visibility visible

